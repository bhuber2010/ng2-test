{
    "compilerOptions": {
        "target": "ES5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "noEmitHelpers": false,
        "noImplicitAny": false
    },
    "compileOnSave": false,
    "buildOnSave": false,
    "exclude": [
        "node_modules"
    ],
    "filesGlob": [
        "client/**/*.ts",
        "!node_modules/**/*.ts"
    ],
    "files": [
        "client/scripts/app/bootstrap.ts",
        "client/scripts/app/components/main/main.component.spec.ts",
        "client/scripts/app/components/main/main.component.ts",
        "client/scripts/app/vendor.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
